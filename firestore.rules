rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match / { document=**} {
      function isAdmin () {
        return get(/databases/$(database)/documents/admins/$(request.auth.uid)) != null;
      }
      allow read: if request.auth.token.email == request.resource.data.email;
      allow read, write: if isAdmin();
    }
  }
}
